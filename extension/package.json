{
  "name": "ai-shopping-copilot-extension",
  "version": "0.1.0",
  "description": "Chrome Extension for AI Shopping Copilot",
  "type": "module",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "node build.mjs",
    "build:watch": "node build.mjs --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist icons",
    "test": "vitest run",
    "logs": "node scripts/debug-server.mjs"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "@types/jsdom": "^27.0.0",
    "esbuild": "^0.20.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "ws": "^8.19.0"
  }
}
